<UserControl x:Class="ProjectManagerApp.UI.UCs.UCReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagerApp.UI.UCs"
             mc:Ignorable="d" >
    <Border BorderThickness="3" BorderBrush="{StaticResource LightBrown}" CornerRadius="10">
        <Grid Width="250" Height="300" PreviewMouseLeftButtonUp="Grid_PreviewMouseLeftButtonUp">



            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource LightBrown}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                           

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <Image Source="{Binding ImageSource}" Height="200"/>
                <TextBlock Text="{Binding ReportName}" FontSize="25"/>
            </StackPanel>

        </Grid>
    </Border>


</UserControl>
