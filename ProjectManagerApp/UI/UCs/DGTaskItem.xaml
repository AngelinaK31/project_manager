<UserControl x:Class="ProjectManagerApp.UI.UCs.DGTaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagerApp.UI.UCs"
             mc:Ignorable="d">
    <Grid>
        <DockPanel Margin="0 0 0 7">
            <TextBlock Text="{Binding Name}" TextWrapping="Wrap" DockPanel.Dock="Left" />



            <Button Style="{StaticResource btnTranparent}" HorizontalAlignment="Right"  VerticalAlignment="Top" Click="btnDelTaskClick" DockPanel.Dock="Right">
                <Image Source="/Resources/close_win.png" Height="20" Width="20"/>
            </Button>
            
            <TextBlock Text="{Binding User.SecondName}" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="0 22 0 0"/>

        </DockPanel>
        <Separator Background="{StaticResource DarkBlue}" DockPanel.Dock="Bottom" Height="1" Margin="2 5 2 3" VerticalAlignment="Bottom"/>
    </Grid>
    

</UserControl>
