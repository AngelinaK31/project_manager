<UserControl x:Class="ProjectManagerApp.UI.UCs.DGTaskHeaderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagerApp.UI.UCs"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="0 0 10 0"/>
        <TextBlock Text="{Binding SumTasks}" FontSize="16" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
