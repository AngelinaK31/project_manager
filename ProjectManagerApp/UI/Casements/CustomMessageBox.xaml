<Window x:Class="ProjectManagerApp.UI.Casements.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagerApp.UI.Casements"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="200" Width="400"
        Style="{DynamicResource WindowStyle}" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="/Styles/WindowStyle.xaml"/>
    </Window.Resources>
    <Grid Background="{StaticResource LightBlue}">
        <TextBlock VerticalAlignment="Center" x:Name="tbxDesciption" HorizontalAlignment="Center" FontSize="16"/>
    </Grid>
</Window>
